/**index.wxss**/

.topHeader {
  background-color: #fff;
  width: 100%;
  padding: 0.5rem 0.75rem;
  z-index: 999999999;
  height: 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
}
swiper{
  margin-top: 4rem;
  background-color: #ffffff;
}
page{
  background: #f6f6f6;
}
.gold_title {
  color: #666;
  font-size: 0.59375rem;
  line-height: 2;
}

.price_box {
  display: flex;
  justify-content: space-between;
  color: #333;
}

.price_right image {
  width: 0.625rem;
  height: 0.625rem;
}

.price_right {
  font-size: 0.8125rem;
  font-family: Microsoft YaHei;
  font-weight: 400;
  margin-right: 1.5rem;
}

swiper {
  height: 13rem;
  padding: 0 0.75rem;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 0.4rem 0.4rem 0 0;
}

.centerdiv {
  padding: 0 0.75rem;
  background-color: #fff;
}

.centerdiv image {
  width: 1.25rem;
  display: inline-block;
  height: 1.25rem;
}

.classify {
  display: flex;
  align-items: center;
  font-size: 0.56rem;
  height: 100%;
}

.center_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f6f6f6;
  height: 2rem;
  border-radius: 0 0 0.3rem 0.3rem;
}

.center_tab {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  font-size: 0.68rem;
  padding: 0.6rem 0;
  border-bottom: 0.6rem solid #f6f6f6;
}
.tab_box image {
  width: 1.4rem;
  height: 1.4rem;
  display: block;
  margin: 0 auto;
  margin-bottom: 0.3rem;
}

.tab_box2 image {
  width: 1.2rem;
  height: 0.9rem;
  margin-top: 0.5rem;
}
.goods_title{
  color: #333333;
}