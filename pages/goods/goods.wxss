swiper {
  width: 100%;
  height: 23rem;
}

swiper image {
  width: 100%;
  height: 100%;
}

.groupone {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-left: auto;
  margin-right: auto;
  padding: 0;
  border-bottom: 0.6rem solid rgba(245, 245, 245, 1);
}

.titleone {
  margin-left: 0.75rem;
  margin-right: 0.75rem;
  height: auto;
  font-size: 1rem;
  color: #191515;
  position: relative;
  padding-bottom: 0.5rem;
  line-height: 1.6rem;
}

.row {
  padding-top: 0.6rem;
  font-size: 0.85rem;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}

.original_price {
  color: #808080;
  font-size: 0.65rem;
}

.original_price>text {
  text-decoration: line-through;
}

.original_price {
  color: #808080;
  font-size: 0.65rem;
  display: flex;
  justify-content: space-between;
}

.original {
  color: #808080;
  font-size: 0.65rem;
}

.current_price .red {
  font-size: 0.75rem;
  color: #e61d1d;
}

.current_price .num {
  font-size: 1.05rem;
  color: #e61d1d;
  font-weight: bold;
}

.state_box text {
  margin-left: 0.475rem;
}

.state_box text:before {
  content: "";
  width: 0.15rem;
  height: 0.15rem;
  background: rgba(223, 181, 98, 1);
  display: inline-block;
  vertical-align: middle;
  margin-right: 0.15rem;
}

.weui-demo-dialog {
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.weui-half-screen-dialog {
  transition: all 0.3s;
  transform: translateY(100%);
}

.weui-demo-dialog_show {
  visibility: visible;
  opacity: 1;
}

.weui-demo-dialog_show .weui-half-screen-dialog {
  transform: translateY(0);
}

.title_p {
  height: 2.1rem;
  margin-top: 0.5rem;
  line-height: 2.1rem;
  font-size: 0.7rem;
  font-family: "Microsoft YaHei";
  font-weight: 500;
  padding-left: 0.8rem;
  color: rgba(0, 0, 0, 1);
  background-size: 0.775rem 0.825rem;
  border-top: 0.6rem solid rgba(245, 245, 245, 1);
  display: flex;
  justify-content: space-between;
}

.left {
  white-space: nowrap;
}

.chooseimg {
  display: inline-block;
  vertical-align: middle;
  width: 0.5rem;
  height: 0.7rem;
  margin-right: 0.5rem;
  margin-left: 0.5rem;
}

.selected {
  background-color: #fff;
  border-bottom: 0.1rem solid rgba(245, 245, 245, 1);
  line-height: 2rem;
  font-size: 0.8125rem;
  color: #333;
  text-align: center;
}

.selected text {
  display: inline-block;
  border-bottom: 0.125rem solid #e7c37c;
  color: #e7c37c;
  line-height: 2rem;
}

.detail_box {
  background: #fff;
  color: #4d4d4d;
  font-size: 0.7rem;
  padding: 0.9rem 0.75rem;
  line-height: 1.2rem;
}

.discription {
  margin-bottom: 3rem;
}

.footer {
  width: 100%;
  height: 3rem;
  background-color: #fff;
  margin: 0 auto;
  position: fixed;
  bottom: 0;
  z-index: 3;
}

.left_btn image {
  width: 1.6rem;
  height: 1.6rem;
  display: block;
}

.left_btn text {
  padding-bottom: 0.3rem;
}

.left_btn {
  width: 25.3%;
  height: 56px;
  float: left;
  cursor: pointer;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0.5rem;
}

.right_btn {
  width: 74%;
  height: 3rem;
  outline: none;
  cursor: pointer;
  border: none;
  float: right;
  font-size: 0.8rem;
  color: #fff;
  text-align: center;
  line-height: 3rem;
  background: linear-gradient(270deg, rgba(66, 66, 66, 1) 0%, rgba(45, 45, 45, 1) 100%);
}

.guige_img image {
